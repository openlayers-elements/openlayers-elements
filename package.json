{
  "private": true,
  "name": "open-layers",
  "workspaces": [
    "demos",
    "test",
    "bundle",
    "elements/*"
  ],
  "scripts": {
    "prestart": "npm run analyze",
    "start": "npm --workspace demos run start",
    "build": "npm -w @openlayers-elements/core -w @openlayers-elements/maps -w @openlayers-elements/swisstopo -w @openlayers-elements/bundle run build",
    "lint": "eslint --ext .ts,.js elements demos --quiet",
    "test": "wtr",
    "preanalyze": "tsc",
    "analyze": "polymer analyze --sources elements > demos/public/analysis.json",
    "predocs": "npm run analyze",
    "docs": "npm --workspace demos run build",
    "release": "changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.0",
    "@open-wc/eslint-config": "^8.0.2",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@tpluscode/eslint-config": "^0.4.5",
    "@types/mocha": "^9.1.1",
    "@types/ol": "^6.4.2",
    "@types/sinon": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/dev-server-rollup": "^0.3.15",
    "@web/test-runner": "^0.13.27",
    "eslint": "^8",
    "eslint-import-resolver-typescript": "^3.6.1",
    "husky": "^9",
    "lint-staged": "^13.0.3",
    "polymer-cli": "^1.9.11",
    "prettier": "^1.16.4",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --quiet --fix"
    ]
  }
}
