{
  "private": true,
  "name": "open-layers",
  "workspaces": [
    "demos",
    "elements/*"
  ],
  "scripts": {
    "start": "lerna run --scope demos start",
    "start:es5": "lerna run --scope demos start:es5",
    "build": "lerna run --no-private build",
    "pretest": "tslint -p tsconfig.json; yarn build",
    "test": "lerna run test:es5:bs --stream --concurrency 1",
    "analyze": "polymer analyze --sources elements/**/*.js > demos/analysis.json",
    "docs": "yarn build; yarn analyze; lerna run --scope demos build"
  },
  "devDependencies": {
    "lerna": "^3.13.0",
    "polymer-cli": "^1.9.6",
    "webpack-cli": "^3.2.3"
  }
}
