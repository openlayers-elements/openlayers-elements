{
  "private": true,
  "name": "open-layers",
  "workspaces": [
    "demos",
    "test",
    "elements/*"
  ],
  "scripts": {
    "prestart": "yarn analyze",
    "start": "wsrun -p demos -c start",
    "build": "wsrun -x demos -x @openlayers-elements/testing -c build",
    "lint": "eslint elements/**/*.ts demos/**/*.js --quiet",
    "test": "wtr",
    "analyze": "polymer analyze --sources elements > demos/analysis.json",
    "docs": "yarn build; yarn analyze; wsrun -p demos -c build",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.14.1",
    "@open-wc/building-webpack": "^1.3.3",
    "@open-wc/eslint-config": "^4.2.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@tpluscode/eslint-config": "^0.1.1",
    "@types/mocha": "^5.2.6",
    "@types/ol": "^6.4.2",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@web/dev-server-esbuild": "^0.2.11",
    "@web/dev-server-rollup": "^0.3.2",
    "@web/test-runner": "^0.12.17",
    "@web/test-runner-browserstack": "^0.4.2",
    "eslint": "^7.22.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-wc": "^1.3.0",
    "polymer-cli": "^1.9.6",
    "prettier": "^1.16.4",
    "typescript": "^4.2.3",
    "webpack-cli": "^3.2.3",
    "wsrun": "^5.2.4"
  },
  "dependencies": {
    "@types/sinon": "^9.0.11"
  }
}
