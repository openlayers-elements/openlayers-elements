{
  "private": true,
  "name": "open-layers",
  "workspaces": [
    "demos",
    "elements/*"
  ],
  "scripts": {
    "prestart": "yarn analyze",
    "start": "lerna run --scope demos start",
    "start:es5": "lerna run --scope demos start:es5",
    "build": "lerna run --ignore demos build",
    "lint": "eslint elements/**/*.ts demos/**/*.js",
    "pretest": "yarn lint --quiet; yarn build",
    "test": "karma start",
    "test:watch": "yarn test --auto-watch=true --single-run=false",
    "test:es5": "karma start karma.es5.config.js",
    "test:es5:watch": "karma start karma.es5.config.js --auto-watch=true --single-run=false",
    "test:es5:bs": "karma start karma.es5.bs.config.js",
    "analyze": "polymer analyze --sources elements > demos/analysis.json",
    "docs": "yarn build; yarn analyze; lerna run --scope demos build",
    "remap-coverage": "cat ./coverage/coverage-final.json | yarn remap-istanbul -o ./coverage/lcov.info -t lcovonly"
  },
  "devDependencies": {
    "@open-wc/testing": "^0.9.19",
    "@open-wc/testing-karma": "^0.4.11",
    "@open-wc/testing-karma-bs": "^0.2.12",
    "@types/mocha": "^5.2.6",
    "@types/ol": "^4.4.2",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "eslint": "^5.15.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "lerna": "^3.13.0",
    "polymer-cli": "^1.9.6",
    "prettier": "^1.16.4",
    "sinon": "^7.3.1",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "@types/sinon": "^7.0.11"
  }
}
