{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2018",
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "demos",
    "elements",
    "bundle",
    "web-test-runner.config.mjs"
  ]
}
