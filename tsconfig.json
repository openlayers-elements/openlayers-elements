{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2018",
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext",
    "noEmitOnError": false,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": ["demos", "elements", "bundle", "web-test-runner.config.mjs"]
}
